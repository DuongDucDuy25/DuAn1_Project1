<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_admin.frg_taikhoan"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/baseline_account_circle_24"
        />
    <TextView
        android:id="@+id/tvTenTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ và Tên"
        android:textSize="22dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
        />
    <TextView
        android:id="@+id/tvRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chức Quyền"
        android:textSize="22dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"

        />

    <TextView
        android:id="@+id/tvThongKe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thống Kê"
        android:textSize="22dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"

        />

    <TextView
        android:id="@+id/tvChangePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thay Đổi Mật Khẩu"
        android:textSize="22dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"

        />
    <TextView
        android:id="@+id/tvGioiThieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giới Thiệu"
        android:textSize="22dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"

        />

    <TextView
        android:id="@+id/tvDangXuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Xuất"
        android:textSize="22dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textColor="#FF0000"

        />


</LinearLayout>